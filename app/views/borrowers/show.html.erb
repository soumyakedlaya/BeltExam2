<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div id= "borrower_container">
      <p>Name: <%=@borrower.first_name %> <%=@borrower.last_name %></p>
      <p id = "amtneeded">Amount Needed: <%=@borrower.money %></p>
      <p id = "amtraised">Amount Raised: <%=@borrower.moneyraised %></p>
      <h2> People who lend you money: </h2>
      <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Amount Lent</th>
            </tr>
              </thead>
              <tbody>
                  <% @borrower.transactions.each do |t| %>
                      <tr>
                        <td><%=t.lender.first_name%> <%=t.lender.last_name %></a></td>
                        <td><%=t.lender.first_name%> <%=t.lender.last_name %></a></td>
                        <td>
                          <%=t.amount %>
                        </td>
                      </tr>
                  <% end %>
              </tbody>
          </table>
        </div>
  </body>
</html>
